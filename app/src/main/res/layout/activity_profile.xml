<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/home_borderbox_form"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/product_sans_b"
            android:paddingLeft="16dp"
            android:text="Personal Information"
            android:textAllCaps="true"
            android:textColor="@color/blue3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="Name"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:fontFamily="@font/product_sans_b"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="Yoel Tanujaya"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/black_opaque"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/product_sans_b"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Yoel Tanujaya"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="Phone Number"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/black_opaque"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/product_sans_b"
            android:hint="Add Phone Number"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/black_opaque"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="Phone Number"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/black_opaque"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/product_sans_b"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="0822-4259-1209"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_borderbox_form"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_b"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:text="ACCOUNT INFORMATION"
            android:textAllCaps="true"
            android:textColor="@color/blue3"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/product_sans_r"
            android:paddingLeft="16dp"
            android:text="Connected as:"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@drawable/fb_icon"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="287dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/product_sans_r"
                android:gravity="center_horizontal|center"
                android:text="Not Signed in"
                android:textAlignment="textStart"
                android:textColor="@color/black_opaque"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="@drawable/button_add_account"
                android:fontFamily="@font/product_sans_b"
                android:text="Add"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:srcCompat="@drawable/google_icon" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/product_sans_r"
                android:gravity="left|center"
                android:text="Yoel Tanujaya"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="@drawable/button_remove_account"
                android:fontFamily="@font/product_sans_b"
                android:text="Remove"
                android:textColor="@color/red_notice"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/product_sans_r"
            android:paddingLeft="16dp"
            android:text="@string/email"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_b"
            android:paddingLeft="16dp"
            android:text="yoeltan77@gmail.com"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>