<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:fontFamily="@font/product_sans_b"
        android:text="Profile Settings"
        android:textAllCaps="false"
        android:textColor="@color/blue4"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/home_borderbox_form"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgProfile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_empty_profile"
            app:civ_border_color="#ffffffff"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/btnEditProfilePicture"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_profile_picture"
            android:elevation="4dp"
            android:fontFamily="@font/product_sans_b"
            android:text="Add / Change Photo"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="Name"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:fontFamily="@font/product_sans_b"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="Phone Number"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:fontFamily="@font/product_sans_b"
            android:gravity="center_vertical"
            android:hint="Enter Your Phone Number"
            android:paddingLeft="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black_opaque"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/separator" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_r"
            android:letterSpacing="0.1"
            android:paddingLeft="16dp"
            android:text="@string/email"
            android:textAllCaps="true"
            android:textColor="@color/blue2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/product_sans_b"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_revoke_account"
        android:elevation="4dp"
        android:fontFamily="@font/product_sans_b"
        android:text="DELETE ACCOUNT"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/product_sans_r"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="To change password, re-enter your current password and enter your new password."
        android:textAllCaps="false"
        android:textColor="@color/black_opaque"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePassword" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_change_account"
        android:fontFamily="@font/product_sans_b"
        android:text="CHANGE PASSWORD"
        android:textColor="@color/blue3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/product_sans_r"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="This action CANNOT be UNDONE! Proceed with caution."
        android:textAllCaps="false"
        android:textColor="@color/black_opaque"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeleteAccount" />

</android.support.constraint.ConstraintLayout>